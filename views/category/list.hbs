<div style="text-align: center;">
	<h1>Las Kategorías</h1>
	<p>&nbsp;</p>
</div>
<div class="row">
	<div class="card col-xs-12 col-md-3 text-center" style="padding: 0;">
		<a href="/kategorie/nova" class="btn btn-primary" style="width: 100%; height: 100%;">
			<i class="fa fa-plus-circle fa-5x" aria-hidden="true" style="vertical-align: center;"></i><br/>
			vytvořit<br/>
			novou<br/>
			kategorii
		</a>
	</div>
{{#kategorie}}
	<div class="card col-xs-12 col-md-3">
	  {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
	  <div class="card-block">
	    <h4 class="card-title"><a href='/kategorie/{{id}}'>{{name}}</a></h4>
			<pre class="small">{{code_name}}</pre>
	    <p class="card-text">{{content}}</p>

		  <div class="card-block">
				<a href="/kategorie/{{id}}/upravit">upravit</a> | {{> category/delete}}
			</div>

	  </div>
	</div>
{{/kategorie}}
</div>
