{{#if id}}
<h1>Upravit kategorii</h1>
{{else}}
<h1>Nová kategorie</h1>
{{/if}}
{{#if id}}
<form action="/kategorie/{{id}}" method="post" enctype="application/x-www-form-urlencoded">
{{else}}
<form action="/kategorie" method="post" enctype="application/x-www-form-urlencoded">
	<input type="hidden" value="PUT" name="_method" />
{{/if}}
	<p>
		Jméno:
		<input name="name" value="{{name}}" />
	</p>
	<p>
		Strojové jméno (url alias, třeba <code>papir_znecisteny</code>):
		<input name="code_name" value="{{code_name}}" />
		{{! TODO validovat unikátnost }}
	</p>
	<p>
		Popis:
		<textarea name="content">{{content}}</textarea>
	</p>
	<p>
		<input type="submit" value="odeslat" />
		<a href="/kategorie/{{id}}">zrušit</a> |
		<a href="/kategorie/{{id}}/upravit">obnovit formulář</a> |
		<a href="/kategorie">seznam kategorií</a> |
		<a href="/odpadky">seznam odpadků</a>
	</p>
</form>
{{> category/delete}}
