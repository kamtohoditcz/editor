<h1>Las Kategorías</h1>
{{! TODO bootstrap a zarovnat do krabicek ;) }}
<ul>
	<li>
		<p>
			<a href="/kategorie/nova">Vytvořit novou kategorii</a>
		</p>
	</li>
{{#kategorie}}
	<li>
		<h3><a href='/kategorie/{{id}}'>{{name}}</a></h3>
		{{! TODO preview helper metoda aby se zobrazovalo jen prvnich 100 znaku contentu }}
		<pre>{{code_name}}</pre>
		<p>{{content}}</p>
		<p>
			<form action="/kategorie/{{id}}" method="delete" name="odpadek-smazat" enctype="application/x-www-form-urlencoded"> <input type="submit" value="smazat" /> </form>
			<a href="/kategorie/{{id}}/upravit">upravit</a>
		</p>
	</li>
	<hr/>
{{/kategorie}}
</ul>
